; InstallerNG
; $VER: InstallerNG 0.1.0-alpha.1

(set #app-bin "installer")
(set @app-name "InstallerNG")
(set @default-dest "RAM:")

;---------------------------------------------------------------------------------------------------------------------------------------------
; Welcome 
;---------------------------------------------------------------------------------------------------------------------------------------------
(welcome "Welcome to the InstallerNG installer\n")

;---------------------------------------------------------------------------------------------------------------------------------------------
; Choose installation location
;---------------------------------------------------------------------------------------------------------------------------------------------
(set @default-dest
  (askdir
    (prompt "Please choose a location for installing InstallerNG")
    (help "-")
    (default @default-dest)
  )
)

;---------------------------------------------------------------------------------------------------------------------------------------------
; Copy executable
;---------------------------------------------------------------------------------------------------------------------------------------------
(copylib
  (prompt ("Copying '%s' to '%s'" #app-bin (tackon @default-dest #app-bin)))
  (help "-")
  (source "installer")
  (dest @default-dest)
  (confirm 0)
)
